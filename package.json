{
  "name": "ts-runtime-picker-monorepo",
  "scripts": {
    "package:build": "pnpm --filter=ts-runtime-picker build",
    "package:build:watch": "pnpm --filter=ts-runtime-picker build:watch",
    "package:test": "pnpm --filter=ts-runtime-picker test",
    "package:test:watch": "pnpm --filter=ts-runtime-picker test:watch",
    "package:publish": "cd package && pnpm publish --access public --no-git-checks"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "vite": "^7.1.1"
  }
}
